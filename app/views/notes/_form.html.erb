<%= form_with(model: note, local: true) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.text_field :title, class:"form-control", placeholder:"Note Title" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :content, class:"form-control", placeholder:"Note Body" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :resolution_date, class:"form-control", placeholder:"Complete By" %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-warning'%>
  </div>
<% end %>
